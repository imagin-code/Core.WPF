    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{local:StyleKey Key=Control}"/>
    </ResourceDictionary.MergedDictionaries>
    <!-- ... (base) ColorSelector -->
    
    <Style x:Key="{x:Type local:ColorSelector}" TargetType="{x:Type local:ColorSelector}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="Background" Value="{x:Static Media:CheckerBrush.Default}"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- ... ComponentSelector2D -->

    <DataTemplate x:Key="ComponentSelector2DTemplate">
        <local:FillElement Fill="White"
            DataContext="{Binding Data}"
            Height="1" Width="1">
            <local:FillElement.Effect>
                <Effects:ColorModelEffect
                    XComponent="{Binding XComponent, Converter={x:Static Conversion:Component4ToDoubleConverter.Default}}"
                    YComponent="{Binding YComponent, Converter={x:Static Conversion:Component4ToDoubleConverter.Default}}"
                    Depth="{Binding Depth}"
                    Mode="XY"
                    Model="{Binding Model}"
                    Profile="{Binding Profile}"
                    Shape="{Binding Shape}"
                    X="{Binding X, Converter={x:Static Conversion:OneToDoubleConverter.Default}}"
                    Y="{Binding Y, Converter={x:Static Conversion:OneToDoubleConverter.Default}}"
                    Z="{Binding Z, Converter={x:Static Conversion:OneToDoubleConverter.Default}}"
                    W="{Binding W, Converter={x:Static Conversion:OneToDoubleConverter.Default}}"/>
            </local:FillElement.Effect>
        </local:FillElement>
    </DataTemplate>

    <Style x:Key="{x:Type local:ComponentSelector2D}" TargetType="{x:Type local:ComponentSelector2D}" BasedOn="{StaticResource {x:Type local:ColorSelector}}">
        <Setter Property="ClipToBounds" Value="True"/>
        <Setter Property="EllipseDiameter" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ComponentSelector2D}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding Border.CornerRadius}">
                        <Border.Resources>
                            <Data:Reference x:Key="ComponentSelector" Data="{Data:TemplatedParent}"/>
                        </Border.Resources>
                        <ContentPresenter>
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <Grid DataContext="{Binding Source={StaticResource ComponentSelector}}">
                                        <Viewbox x:Name="Viewbox" Stretch="Fill">
                                            <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource ComponentSelector2DTemplate}"/>
                                        </Viewbox>
                                        <local:ComponentSelectorEllipse x:Name="Ellipse" Diameter="{Binding Data.EllipseDiameter}"
                                            X="{Binding Data.EllipsePosition.X}" 
                                            Y="{Binding Data.EllipsePosition.Y}"/>
                                    </Grid>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

