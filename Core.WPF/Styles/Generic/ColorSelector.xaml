    <Style x:Key="{x:Type local:ComponentSlider}" TargetType="{x:Type local:ComponentSlider}" BasedOn="{StaticResource {x:Type local:BaseComponentSlider}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ComponentSlider}">
                    <Grid>
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding Border.CornerRadius}">
                            <Viewbox Stretch="Fill">
                                <local:FillElement x:Name="PART_Fill" Fill="White"
                                    DataContext="{Data:TemplatedParent}"
                                    Height="1" Width="1">
                                    <local:FillElement.Effect>
                                        <Effects:ColorModelEffect
                                            XComponent="{Binding Component, Converter={x:Static Conversion:Component4ToDoubleConverter.Default}}"
                                            Depth="{Binding Depth}"
                                            Mode="Z"
                                            Model="{Binding Model}"
                                            Profile="{Binding Profile}"
                                            Shape="{Binding Shape}"
                                            X="{Data:OneToDoubleBinding X}"
                                            Y="{Data:OneToDoubleBinding Y}"
                                            Z="{Data:OneToDoubleBinding Z}"
                                            W="{Data:OneToDoubleBinding W}"/>
                                    </local:FillElement.Effect>
                                </local:FillElement>
                            </Viewbox>
                        </Border>
                        <ContentPresenter x:Name="ContentPresenter" Content="{Data:TemplatedParent ArrowPosition}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Shape" Value="Circle">
                            <Setter TargetName="ContentPresenter" Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <local:ComponentSelectorEllipse Diameter="12"
                                            X="{Binding X}" 
                                            Y="{Binding Y}"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="Shape" Value="Square">
                            <Setter TargetName="ContentPresenter" Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Canvas>
                                            <ContentPresenter Content="{Data:Ancestor ArrowForeground, local:ComponentSlider}"
                                                ContentTemplate="{Data:Ancestor ArrowTemplate, local:ComponentSlider}"
                                                Canvas.Left="{Data:Ancestor ArrowPosition.X, local:ComponentSlider}"
                                                Canvas.Top="{Data:Ancestor ArrowPosition.Y, local:ComponentSlider}"/>
                                        </Canvas>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

